package processamento;

public class Processamento {

	public static void main(String[] args) {

		int x, y;

		x = 5;

		y = 2 * x;

		System.out.println(x);
		System.out.println(y);

		int z;
		double w;

		z = 6;

		w = 2 * z;

		System.out.println(z);
		System.out.println(w);
		
		double b, B, h, area;
		
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = (b + B) / 2 * h;
		
		System.out.println(area);
		
		int a, c; 
		double resultado, resultado2;
		
		a = 5;
		c = 2;
		
		resultado = a/c;
		
		// como é operação de números inteiros, o resultado é interpretado sem a casa decimal, mas se colocar a função double antes da operação, será dado o resultado com a casa decimal. 
		
		System.out.println(resultado);
		
	
		resultado2 = (double) a/c;

		System.out.println(resultado2);
		
		

	}

}
